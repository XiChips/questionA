/* pages/index/index.wxss */
.container {
  padding-bottom: 150rpx;
}

.greeting {
  font-size: 40rpx;
  padding: 20rpx 0;
  width: 100vw;
  text-align: center;
  color: rgb(120, 189, 0);
  background-color: rgb(39, 42, 59);
  position: relative;
}

.message {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translate(0, -50%);
}

.message image {
  width: 100%;
  height: 100%;
}

.dot {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background-color: red;
  width: 35rpx;
  height: 35rpx;
  line-height: 35rpx;
  font-size: 20rpx;
  color: #ddd;
  border-radius: 50%;
}

swiper {
  position: relative;
}

swiper-item>view,
swiper-item>view>image {
  width: 100%;
  height: 100%;
}

swiper .wx-swiper-dots-horizontal .wx-swiper-dot {
  border: 2rpx solid rgb(135, 192, 1);
}

.list {
  display: flex;
  justify-content: space-between;
  background-color: rgb(39, 42, 59);
  padding: 20rpx;
}

.list>view {
  width: 20%;
  text-align: center;
  color: rgb(143, 143, 144);
  font-size: 28rpx;
}

.list>view>image {
  display: block;
  width: 45%;
  margin: 0 auto;
}


.list2 {
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
  background-color: rgb(255, 255, 255);
  border: 1px solid #eee;
  box-shadow: 0 0px 3px #ddd;
}

.list2>view {
  box-sizing: border-box;
  width: 25%;
  text-align: center;
  color: rgb(143, 143, 144);
  font-size: 32rpx;
  padding: 30rpx;
  border-right: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.list2>view>image {
  display: block;
  width: 90%;
  margin: 0 auto;
  margin-bottom: 10rpx;
}



.list3 {
  display: flex;
  flex-wrap: wrap;
  background-color: rgb(241, 241, 241);
  border: 1px solid #eee;
  box-shadow: 0 0px 3px #ddd;
}

.list3>view {
  box-sizing: border-box;
  width: 25%;
  text-align: center;
  color: rgb(143, 143, 144);
  font-size: 32rpx;
  padding: 30rpx;
  border-right: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.list3>view>image {
  display: block;
  width: 90%;
  margin: 0 auto;
  margin-bottom: 10rpx;
}

.mask {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, .5);
}

.popBox {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 90%;
  transform: translate(-50%, -50%);
}

.title {
  text-align: center;
  width: 100%;
  line-height: 100rpx;
  background: rgb(39, 42, 59);
  color: rgb(120, 189, 0);
  font-size: 40rpx;
  border-top-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
}